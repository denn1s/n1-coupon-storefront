# H4B Auth API Configuration
# Passwordless OTP Authentication
H4B_AUTH_API_URL=idp.h4b.dev
H4B_AUTH_API_PORT=443
H4B_AUTH_API_MOUNT=api
H4B_AUTH_API_SECURE=true
H4B_AUTH_API_KEY=your_api_key_here

# Vite requires VITE_ prefix for client-side access
VITE_H4B_AUTH_API_URL=idp.h4b.dev
VITE_H4B_AUTH_API_PORT=443
VITE_H4B_AUTH_API_MOUNT=api
VITE_H4B_AUTH_API_SECURE=true
VITE_H4B_AUTH_API_KEY=your_api_key_here

# API Configuration
# REST API
VITE_API_HOST=http://localhost:8000
VITE_API_MOUNT=/api/v1

# GraphQL API (used for products/coupons catalog)
# The GraphQL endpoint is: ${VITE_API_HOST}/graphql
# For development, you can use the staging server:
# VITE_API_HOST=https://api.h4b.dev

# Environment
VITE_ENV=development
